					<entry>Dual watch enabled</entry>
				</row>
				<row>
					<entry><literal>VOX</literal></entry>
					<entry>VOX enabled</entry>
				</row>
				<row>
					<entry><literal>R</literal></entry>
					<entry>Reverse function enabled</entry>
				</row>
				<row>
					<entry><literal>N</literal></entry>
