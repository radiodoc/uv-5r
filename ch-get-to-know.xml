			<title>LCD icon summary</title>
			<tgroup cols="2">
			<thead>
				<row>
					<entry>Icon</entry>
					<entry>Description</entry>
				</row>
			</thead>
			<tbody>
				<row>
					<entry><literal>188</literal></entry>
					<entry>Memory channel</entry>
				</row>
				<row>
					<entry><literal>25</literal>, <literal>75</literal></entry>
					<entry>Least significant modifiers.</entry>
				</row>
				<row>
					<entry><literal>CT</literal></entry>
					<entry>CTCSS enabled</entry>
				</row>
				<row>
					<entry><literal>DCS</literal></entry>
					<entry>DCS enabled</entry>
				</row>
				<row>
					<entry><literal>+</literal>, <literal>-</literal></entry>
					<entry>Frequency shift direction if enabled</entry>
				</row>
				<row>
