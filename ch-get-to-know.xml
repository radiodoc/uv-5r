	<section xml:id="manual.know.display">
		<title>The main display</title>
		<figure xml:id="manual.radio.display-fig">
			<title>Baofeng UV-5R, display</title>
			<mediaobject>
				<imageobject>
					<imagedata fileref="figs/display.svg.png" contentwidth="5cm" />
				</imageobject>
			</mediaobject>
		</figure>
